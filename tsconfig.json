{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./src",
		"outDir": "./build",
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": false,
    "pretty": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "src/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
